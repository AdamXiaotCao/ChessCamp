<h3>Log In</h3>
<div class="row">
  <div class="small-7 columns">
    <%= form_tag sessions_path do %>
      <div class="control-group">
        <%= label_tag :start_date %>
        <div class="controls">
          <%= text_field_tag :start_date, params[:start_date] %>
        </div>
      </div>
      
      <div class="actions"><%= submit_tag "Submit" %></div>
    <% end %>
  </div>
</div>
