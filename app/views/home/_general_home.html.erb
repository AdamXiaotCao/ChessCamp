	<div class="small-5 columns">
		<div class="panel clearfix">
			<% if !@some_upcoming_camps.empty? %>
			<h4>Some Upcoming Camps:</h4>
			 <% @some_upcoming_camps.each do |camp| %>
				<li><%= "#{camp.name} " %><%= link_to "#{camp.start_date.strftime('%B %e, %Y')}", camp_path(camp) %></li>
			<%	end %>
			<% else %> 
			<p> We currently do not have any upcoming camps avalible</p>
			<% end %>
		
		</div>
	</div>
</div>