<%= simple_form_for(@instructor.user, html: { class: 'form-horizontal' }) do |f| %>
   


   <h3><%= controller.action_name.capitalize %> User</h3>
    <% if current_user.role == "admin" %>
    <%= f.input :username %>
    <%= f.input :password%>
    <%= f.input :password_confirmation %>
    <%= f.label :Role %><br />
    <%= f.select :role, User::ROLES, :prompt => "Select ..." %>

    <% else %> 

    <%= f.input :password%>
    <%= f.input :password_confirmation %>
    <% end %> 

    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Back to list of users', users_path, :class => 'button secondary radius' %>
    </div>

<% end %>